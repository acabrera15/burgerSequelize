<div class="row">
    <div class="col-md-5">

        <!--Creates burger items if there are not devoured-->
        <ul class='list-group'>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class='list-group-item mb-2'>{{this.id}}. {{this.burger_name}}<input
                    class="devourButton float-right btn btn-primary" type="button" value="Devour"
                    burgerId="{{this.id}}">
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-5">

        <!--creates burger items if they are devoured-->
        <ul class='list-group'>

            {{#each burgers}}
            {{#if this.devoured}}
            <li class="list-group-item mb-2 disabled">
                {{this.id}}. {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>